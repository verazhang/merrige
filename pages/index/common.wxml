<!--pages/index/common.wxml-->
<view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
        <view class="weui-label">标题</view>
    </view>
    <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入标题" value="{{title}}"/>
    </view>
</view>
<view class="weui-cells__title">详细描述</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
        <view class="weui-cell__bd">
            <textarea class="weui-textarea" placeholder="请输入详细描述" style="height: 5.3em" />
            <!-- <view class="weui-textarea-counter">0/200</view> -->
        </view>
    </view>
</view>
<view class="weui-cells__title">最后修改于 {{lastUpdateTime}}</view>
